        <Grid HorizontalAlignment="Left" Height="449" VerticalAlignment="Top" Width="574" Margin="1,0,-15.667,0" Background="#FFAFF7F7">
            <Label x:Name="label" Content="Rut:" HorizontalAlignment="Left" Margin="20,30,0,0" VerticalAlignment="Top"/>
            <Label x:Name="label_Copy" Content="Nombres:" HorizontalAlignment="Left" Margin="20,62,0,0" VerticalAlignment="Top"/>
            <Label x:Name="label_Copy1" Content="Apellido Paterno:" HorizontalAlignment="Left" Margin="20,97,0,0" VerticalAlignment="Top"/>
            <Label x:Name="label_Copy2" Content="Email:" HorizontalAlignment="Left" Margin="22,164,0,0" VerticalAlignment="Top"/>
