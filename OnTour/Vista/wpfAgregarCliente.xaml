            <Label x:Name="label_Copy5" Content="Establecimiento:" HorizontalAlignment="Left" Margin="22,268,0,0" VerticalAlignment="Top"/>
            <Label x:Name="label_Copy6" Content="Curso:" HorizontalAlignment="Left" Margin="22,302,0,0" VerticalAlignment="Top" Height="33" Width="58"/>


            <TextBox x:Name="txtRut" HorizontalAlignment="Left" mah:TextBoxHelper.Watermark="Ingrese Rut sin DV" Height="8" Margin="187,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165" FontWeight="Normal" LostFocus="txtRut_LostFocus" mah:TextBoxHelper.ClearTextButton="True"/>

            <TextBox x:Name="txtNombre" HorizontalAlignment="Left" mah:TextBoxHelper.Watermark="Ingrese Nombre" Height="8" Margin="187,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165" FontWeight="Normal" mah:TextBoxHelper.ClearTextButton="True"/>
