        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="Vista.wpfAgregarCliente"
        mc:Ignorable="d"
        Title="Agregar Cliente" Height="478.399" Width="565.838" WindowTitleBrush="Black" ResizeMode="NoResize"  WindowStartupLocation="CenterScreen" TitleCharacterCasing="Normal" Icon="Imagenes/MapsR.png">
